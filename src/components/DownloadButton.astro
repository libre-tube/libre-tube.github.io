<a href={Astro.props.href} target="_blank" rel="noopener noreferrer">
  <button>
    <slot />
  </button>
</a>

<style>
  button {
    position: relative;
    display: flex;
    flex-flow: row nowrap;
    justify-content: center;
    align-items: center;
    width: fit-content;
    padding: 24px 22px;
    border: none;
    border-radius: 1.2rem;
    cursor: pointer;
    background-color: var(--background);
    font-size: 23px;
    font-weight: 700;
    color: var(--text);
    gap: 1.2rem;
    overflow: hidden;

    * {
      fill: var(--text);
    }
  }

  button::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 7px;
    background: linear-gradient(to right, #ffb6a0, #ff658d);
    border-bottom-left-radius: 12px;
    border-bottom-right-radius: 12px;
  }
</style>
