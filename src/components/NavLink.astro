---
interface Props {
  href: string;
  title: string;
}

const { href, title } = Astro.props;
---

<a href={href}>{title}</a>

<style>
  a {
    color: var(--text);
    text-decoration: none;
    border-bottom: 2px solid transparent;
    text-transform: uppercase;
    font-size: 1.5rem;
  }

  a:hover {
    border-bottom: 2px solid var(--accent);
  }
</style>
