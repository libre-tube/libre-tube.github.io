---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<details>
  <summary>{title}</summary>
  <p>
    <slot />
  </p>
</details>

<style>
  @keyframes sweep {
    0% {
      opacity: 0;
      margin-left: -10px;
      margin-right: 10px;
    }

    100% {
      opacity: 1;
      margin-left: 0px;
      margin-right: 0px;
    }
  }

  details {
    border: 0.15em solid var(--grey);
    padding: 1.5rem 2.5rem;
    border-radius: 2rem;
  }

  details summary {
    list-style-type: none;
    font-size: 1.5rem;
    font-weight: 700;
    cursor: pointer;
  }

  details p {
    font-size: 1.2rem;
    font-weight: 400;
    padding: 1rem 1rem;
    overflow-wrap: break-word;
    overflow: hidden;
  }

  details summary::-webkit-details-marker {
    display: none;
  }

  details[open] p {
    animation: sweep 0.5s ease-in-out;
  }
</style>
